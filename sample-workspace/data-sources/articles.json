{
	"datasource": {
		"key": "articles",
		"name": "Articles DS",
		"source": {
			"host": "127.0.0.1",
			"port": "3000",
			"endpoint": "editorial/articles"
		},
		"cache": false,

		"paginate": true,

		"filters": [
			{ "category": ["blog"] }
		],

		"count": 5,
		"sort": [
			{ "field": "_id", "order": "asc" }
		],
		"search": {"title": "/(third)/iu"},
		"fields": ["title", "author"]
	}
}
