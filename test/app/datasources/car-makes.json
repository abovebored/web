{
	"datasource": {
		"key": "car-makes",
		"name": "Makes datasource",
		"source": {
			"type": "remote",
			"protocol": "http",
			"host": "127.0.0.1",
			"port": "3000",
			"endpoint": "1.0/cars/makes"
		},
    "caching": {
      "enabled": false,
      "ttl": 50,
      "directory": "./cache/web/",
      "extension": "json"
    },
    "auth": {
      "type": "bearer",
      "host": "127.0.0.1",
      "port": "3000",
      "tokenUrl": "/token",
      "credentials": {
        "clientId": "rosecombClient",
        "secret": "superSecret"
      }
    },
  	"paginate": true,
  	"count": 20,
  	"sort": [
          { "field": "name", "order": "asc" }
      ],
  	"search": {},
    "filter": {},
  	"fields": { "name": 1, "_id": 0 },
    "chained": {
      "datasource": "global",
      "outputParam": {
      "param": "results.0.id",
      "field": "makeId"
      }
    },
    "requestParams": [
      { "param": "make", "field": "name" }
    ]
	}
}
